<div>
    {{>header}}
    <div class="wrapper">
        {{>sidebar}}

        <div id="content" class="container-fluid">
            {{#if errorMsg}}
            {{>error}}
            {{/if}}
            <div class="m-3 p-3 mt-4">
                <h4>Add Mentor</h4>
                <hr>
                <form method="POST" action="/mentor/update-mentor/{{data._id}}">
                    <div class="row">
                        <div class="col-md-4 col-xs-12">
                            <div class="form-floating mb-3">
                                <input value="{{data.fullName}}" name="fullName" required type="text"
                                    class="form-control" id="fullName">
                                <label for="fullName">Full Name</label>
                            </div>
                        </div>
                        <div class="col-md-4 col-xs-12">
                            <div class="form-floating mb-3">
                                <input name="mobile" value="{{data.mobile}}" required type="text" class="form-control"
                                    id="mobile">
                                <label for="mobile">Mobile Number</label>
                            </div>
                        </div>
                    </div>
                    <div class="mt-4 mb-4">
                        <button class="btn btn-success btn-md" type="submit">Save</button>
                        <a class="btn btn-md btn-danger" href="/mentor/delete-mentor/{{data._id}}" onclick="return confirm('Are you sure to delete this record ?');">Delete</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    window.addEventListener('DOMContentLoaded', (event) => {
        setTimeout(function () {
            $('#sidebar #mentors')[0].click();
            let currentSubPage = $('#sidebar .mentorsSubMenu')[1];
            $(currentSubPage).addClass('active')

            $('.select2-single').select2();
        }, 200);
    });
</script>