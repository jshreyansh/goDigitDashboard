<div>
    {{>header}}
    <div class="wrapper">
        {{>sidebar}}

        <div id="content" class="container-fluid">
            {{#if errorMsg}}
            {{>error}}
            {{/if}}
            <div class="m-3 p-3 mt-4">
                <h4>Update Cohort</h4>
                <hr>
                <form method="POST" action="/batch/update-batch/{{data._id}}">
                    <div class="column">
                        <div class="col-md-4 col-xs-12">
                            <div class="form-group mb-2">
                                <h5 for="name">Cohort Name</h5>
                                <input value="{{data.name}}" name="name" required type="text" class="form-control"
                                    id="name">
                            </div>
                        </div>
                        <div class="col-md-4 col-xs-12 ">
                            <div class="mb-3">
                                <h5 for="courseName">Course Name</h5>
                                <select name="batch" class="form-select select2-single">
                                    {{#select data.batch}}
                                    <option value="">Back-End</option>
                                    <option value="">Front-End</option>
                                    {{/select}}
                                </select>
                            </div>
                        </div>
                        <div class="col-md-4 col-xs-12">
                            <div class="mb-3">
                                <h5 for="startDate">Start Date</h5>
                                <input value="{{data.startDate}}" name="startDate" required type="date"
                                    class="form-control" id="startDate">
                            </div>
                        </div>
                        {{!-- ------------------------- --}}
                        <div>
                            <div class="m-3 p-3 mt-4">
                                <h4>Mark topic as Completed</h4>
                                <hr>
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th scope="col">Topic Name</th>
                                            <th scope="col" class="text-center">Action</th>
                                        </tr>
                                    </thead>
                                    <tbody id="batch-table-content">
                                        {{#each data.topicsToBeTaught}}
                                        <tr>
                                            <td>{{this.topicName}}</td>
                                            <td class="d-flex flex-row bd-highlight justify-content-around">
                                                <a class="btn btn-sm btn-danger" href="/batch/moveTaughtTopic-batch/{{../data._id}}/{{this.topicName}}" onclick="return confirm('Is this topic completed?');">isCompleted</a>
                                            </td>
                                        </tr>
                                        {{/each}}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        {{!-- ------------------------- --}}
                        <div class="mt-4 mb-4">
                            <button class="btn btn-success btn-md" type="submit">Save</button>
                        </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    window.addEventListener('DOMContentLoaded', (event) => {
        setTimeout(function () {
            $('#sidebar #batch')[0].click();
            let currentSubPage = $('#sidebar .batchSubMenu')[1];
            $(currentSubPage).addClass('active')

            $('.select2-single').select2();
        }, 200);
    });
</script>